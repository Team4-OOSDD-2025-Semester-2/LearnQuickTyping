<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LearnQuickTyping.App.Views.Main"
             Title="LearnQuickTyping">
    
    <VerticalStackLayout
        Padding="30,0"
        Spacing="25" 
        VerticalOptions="Center"
        HorizontalOptions="Center">
        <Label
            x:Name="PracticeWord"
            Text=""
            HorizontalOptions="Center"/>

        <Entry 
            x:Name="InputText"
            Placeholder="Copy text above and press enter when finished"
            Completed="OnEntryDone"
            TextChanged="StartTiming"
            MinimumWidthRequest="350"/>

        <Label
            x:Name="Result"
            Text="Current Words Per Minute: 0"
            HorizontalOptions="Center"/>
    </VerticalStackLayout>
</ContentPage>